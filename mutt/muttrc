set arrow_cursor
unset abort_nosubject			## allow emails with no subject
unset abort_unmodified			## allow unmodified body
set alias_file=~/.mutt/mutt-aliases
set auto_tag				## apply next function to all tagged messages automatically
unset collapse_unread			## don't collapse all-unread threads
unset confirmappend			## don't ask permission to append messages to mailbox
set delete				## don't ask permisson to delete messages
set editor="emacs -Q -l ~/config/emacs/vanilla.el"
set fast_reply				## don't ask for recipients / subject when replying
set header_cache=~/.mutt-header-cache
unset help
set implicit_autoview		## view attachment as text http://www.fefe.de/muttfaq/faq.html
set include				## don't ask whether to include message in reply
set index_format="%H %Z %{%b %d} %F (%s)"  ## format index: {status date sender subject}
unset mark_old				## don't mark unread mail in visited folders as old
## think this is for caching messages stored remotely on imap
## set message_cachedir=~/.mutt-message-cachedir 
set move				## don't ask permisson to move messages
set pager_stop=yes		## <page down> doesn't advance to next message when it hits EOF
unset recall			## don't ask whether to recall postponed when composing new
## (can you use unset with quadoption?)

## set sendmail="$HOME/bin/sendmail.sh"
## see ~/src/bin/sendmail.sh at which, on my laptop, /usr/bin/sendmail points
set sendmail="ssh davison@gate.stats.ox.ac.uk /usr/sbin/sendmail $@"
set sort=threads			## threads view
set sort_aux=last-date-received		## last thread is that with most recent activity
set sort_browser=alpha			## alphabetical sorting of directories
unset wait_key				## don't wait for any keypress to continue e.g. after manual getmail

## bind index G imap-fetch-mail
## bind index <Tab> next-unread

## http://mutt.blackfish.org.uk/collecting/
## "-y" screen http://www.davep.org/mutt/muttrc/macros.html
macro index g <shell-escape>'getmail-dan'<enter> 'Run getmail'
macro generic G <shell-escape>'getmail-dan'<enter> 'Run getmail'
macro index "y" <sync-mailbox><change-folder>?<toggle-mailboxes> 
macro pager "y" <sync-mailbox><change-folder>?<toggle-mailboxes>

## spam "X-Oxmail-Spam-Status: score=(-?[0-9]+\.[0-9]+)" "spam %1"
## http://www.melonfire.com/community/columns/trog/print.php?id=98

# Sorting:
# (date-received, date-sent, from, mailbox-order, size, subject, threads, to, score)
## (and everything with a prefixed "reverse-")
# (sort_aux can be prefixed with "last-" to use last element in thread instead of first one)

## headers http://www.mutt.org/doc/manual/manual-3.html#ss3.8
ignore *
unignore from date subject to cc
# Specify the order of the headers to appear when displaying a message
unhdr_order *				# forget the previous settings
hdr_order from date subject to cc


