[core]
	excludesfile = ~/.gitignore

[color]
	ui = auto

[user]
	name = Dan Davison
	email = dan@counsyl.com

[alias]
	blamestats = !~/git-utils/blamestats.py ${GIT_PREFIX:-.}
	branch-by-date = !~/clib/git-utils/git-branch-by-date
	contributors = !git log --format=format:"%an" | sort | uniq -c | sort -rn
	fetch-branch = "!f() { git fetch origin $1:$1 } ; f"
	fixup = commit --amend -C HEAD
	grep-history = "!f() { git rev-list --all | xargs git grep $1 } ; f"
	head = rev-list -n1 HEAD
	copy-branch = !"f() { git checkout -b $1 && git checkout - } ; f"
	copy-head = !git head | tr -d '\n' | reattach-to-user-namespace pbcopy
	log = log --graph --color --decorate --date=relative --abbrev-commit
	log1 = log --pretty=oneline --abbrev-commit
	logs = log --stat
	ls = ls-files
	merge = merge --no-edit
	playback = !~/lib/python/git-playback/playback.py ${GIT_PREFIX:-.}
	push = push --set-upstream
	push = push -u
	regraft = !~/clib/git-utils/git-regraft
	squash = !git reset --soft HEAD~1 && git commit --amend -C HEAD
	pushf = !git push origin :$(git rev-parse --abbrev-ref HEAD) && git push

[diff "json"]
	textconv = /Users/dan/bin/jsonpipe

[diff "plist"]
      textconv = PlistBuddy-Print

[merge]
	conflictstyle = diff3
	renamelimit = 10000

[push]
	default = current

[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[hub]
	host = github.counsyl.com
[credential]
	helper = osxkeychain
