[advice]
    detachedHead = false

[blame]
    coloring = highlightRecent

[color "diff"]
	frag = red

[commit]
    status = false

[core]
    # attributesfile = ~/devenv/dotfiles/git/gitattributes
    editor = emacsclient
    excludesfile = ~/.gitignore

[diff]
	colorMoved = default
	colorMovedWS = allow-indentation-change
	frag = red
	submodule = short

[github]
	user = dandavison

[include]
    path = ~/devenv/dotfiles/git/delta.gitconfig

[init]
    defaultBranch = main

[merge]
    conflictstyle = diff3
    renamelimit = 10000

[push]
    default = current
	followTags = true

[pull]
	ff = only

[rebase]
    autosquash = true

[status]
    aheadBehind = false
    hints = false
    short = true

